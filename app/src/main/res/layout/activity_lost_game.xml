<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:layoutDirection="ltr"
    tools:context=".LostGameActivity">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/khatfani"
        android:id="@+id/ivKhatfaniId"
        />

    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/red_notok"
        android:id="@+id/ivNotokId"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הפסדת"
        android:textColor="#FF6E40"
        android:background="#aba"
        android:layout_gravity="center" android:gravity="center"
        android:textSize="35dp"
        />

    <Button
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#FF0000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="למשחק נוסף"
        android:id="@+id/btnPlayAgainId"
        />

</LinearLayout>